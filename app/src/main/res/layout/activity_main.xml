<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="wdx.judge.them.MainActivity">

    <ProgressBar
        android:id="@+id/progress"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foregroundGravity="center"
        android:progress="0"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/categoryViev"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/category"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/category_background"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/category1"
                android:layout_width="match_parent"
                android:layout_height="177dp"
                android:onClick="categoryClick"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/cat1"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/category2"
                android:layout_width="match_parent"
                android:layout_height="177dp"
                android:onClick="categoryClick"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/cat2"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/category3"
                android:layout_width="match_parent"
                android:layout_height="177dp"
                android:layout_weight="1"
                android:onClick="categoryClick"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/cat3"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/category4"
                android:layout_width="match_parent"
                android:layout_height="177dp"
                android:layout_weight="1"
                android:onClick="categoryClick"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/cat4"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/category5"
                android:layout_width="match_parent"
                android:layout_height="177dp"
                android:layout_weight="1"
                android:onClick="categoryClick"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/cat5"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/category6"
                android:layout_width="match_parent"
                android:layout_height="177dp"
                android:layout_weight="1"
                android:onClick="categoryClick"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/cat6"
                tools:ignore="ContentDescription" />

        </LinearLayout>
    </ScrollView>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

    </android.support.v7.widget.RecyclerView>

</LinearLayout>

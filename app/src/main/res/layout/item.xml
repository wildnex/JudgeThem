<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="336dp"
    android:layout_height="426dp"
    android:background="@drawable/img_card_background"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <wdx.judge.them.RoundImageView
            android:id="@+id/iv_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_avatar_01"
            app:radius="7.5dp" />

        <ImageView
            android:id="@+id/iv_dislike"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="false"
            android:alpha="0"
            android:scaleType="centerCrop"
            android:src="@drawable/img_dislike"
            android:layout_alignParentLeft="true" />

        <ImageView
            android:id="@+id/iv_like"
            android:layout_width="126dp"
            android:layout_height="126dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="18dp"
            android:layout_marginStart="11dp"
            android:alpha="0"
            android:src="@drawable/img_like"
            android:layout_marginLeft="11dp"
            android:layout_alignParentLeft="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="14dp"
        android:paddingTop="15dp">

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="имя или чето еще"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:visibility="gone" />

    </RelativeLayout>


</LinearLayout>